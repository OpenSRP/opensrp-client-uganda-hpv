<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.smartregister.ug.hpv.activity.LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:background="#298DC3"
    android:id="@+id/login_layout">

    <!-- Top section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/top_section"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/login_logo"
            android:contentDescription="logo"
            android:src="@drawable/little_girl_hpv_logo"
            android:layout_width="320dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:paddingTop="15dp"/>
    </LinearLayout>


    <!-- Middle section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@+id/top_section"
        android:paddingTop="35dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:id="@+id/middle_section">

        <EditText
            android:id="@+id/login_user_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Username"
            android:ems="10"
            android:typeface="sans"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:background="@drawable/rounded_corner_edit_text"
            android:paddingLeft="10dp"
            android:width="260dp"
            android:cursorVisible="true"
            android:textColorHint="#bfbfbf"
            android:textColor="#666666"
            android:textSize="22sp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/login_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Password"
            android:ems="10"
            android:background="@drawable/rounded_corner_edit_text"
            android:paddingLeft="10dp"
            android:typeface="sans"
            android:maxLines="1"
            android:width="260dp"
            android:layout_marginTop="20dp"
            android:textCursorDrawable="@null"
            android:cursorVisible="true"
            android:textSize="22sp"
            android:textColorHint="#bfbfbf"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:inputType="textPassword" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Show password"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Log In"
            android:onClick="login"
            android:ems="10"
            android:width="260dp"
            android:background="@drawable/login_button"
            android:shadowColor="#ffffff"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:textColor="#666666"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:layout_weight="8"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <!-- Bottom section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingTop="150dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Powered by"
            android:textColor="#A6ffffff"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/opensrp_logo_image_view"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_opensrp_logo"
            />

        <TextView
            android:id="@+id/login_build_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#90c4dc"
            android:textSize="16sp"
            android:typeface="sans"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>